@model PromotionsSG.Presentation.WebPortal.Models.FeedbackViewModel

@{
    ViewData["Title"] = "Update Feedback";
}

<h1>@ViewData["Title"]</h1>
@using (Html.BeginForm("UpdateFeedback", "FeedbackView", FormMethod.Post, new { @id = "updateFeedbackForm", @class = "_page-wrapper stepping" }))
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditCustomerProfileSub" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="feedbackDto.FeedbackId" />
                <input type="hidden" asp-for="feedbackDto.PromotionId" />
                <input type="hidden" asp-for="feedbackDto.ClaimId" />
                <input type="hidden" asp-for="feedbackDto.IsDeleted" />
                <input type="hidden" asp-for="feedbackDto.CreatedTime" />

                <div class="form-group">
                    <label class="control-label">Title: </label>
                    <input asp-for="feedbackDto.Title" class="form-control" />
                    <span asp-validation-for="feedbackDto.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Rating: </label>
                    <input asp-for="feedbackDto.Rating" value="Good" type="radio" id="myFirstId" />Good
                    <input asp-for="feedbackDto.Rating" value="Bad" type="radio" id="mySecondId" />Bad
                    <span asp-validation-for="feedbackDto.Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Feedback: </label>
                    <input asp-for="feedbackDto.Description" disabled class="form-control" />
                    <span asp-validation-for="feedbackDto.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="LoginView" asp-action="Index">Back to List</a>
    </div>
}

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
